.place
  .place__header
    .place__header__logo
      = link_to 'i sharing', root_path
    .place__header__user
      = link_to current_user.name ,edit_user_path(current_user)
    .place__header__sign-up
      %li SIGN UP
    .place__header__log-in
      %li LOG IN
    .place__header__all-places
      = link_to 'All Places', all_places_path
    .place__header__new-create
      = link_to 'New Place', new_place_path
  .place__all
    .place__all__pictures
      - @places.each do |place|
        .place__box
          .place__list__item
            .place__list__item__user
              = place.user.name
            .place__list__item__time 
              = place.created_at.strftime("%Y/%m/%d %H:%M")
          .place__list__item__image
            = link_to place do
              = image_tag place.images[0].url
          .place__list__item__address
            = place.address
            .place_list_link
            - if place.user_id == current_user.id
              = link_to '編集', edit_place_path(place)
              = link_to '削除', place, method: :delete, data: { confirm: '削除してよろしいですか?' }
  .place__footer