- if current_user.likes.find_by(place_id: place.id)
  = link_to unlike_path(place.id), method: :delete, remote: true do
    %i.far.fa-heart
      %span.fade-in-down
      いいね！
      = place.likes.count
- else
  = link_to like_path(place.id), method: :post, remote: true do
    %i.far.fa-heart
      %span.fade-in-down
      いいね！
      = place.likes.count 